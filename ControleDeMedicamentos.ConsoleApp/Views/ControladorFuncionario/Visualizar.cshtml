@using ControleDeMedicamentos.ConsoleApp.Models
@model VisualizarFuncionariosViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Controle de Medicamentos - Visualização Funcionários</title>
    <style>

            body 
            {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                background-color: #f9f9f9;
                margin: 0;
                padding: 20px;
                color: #333;
            }

            .barra_inicial 
            {
                background-color: #1e90ff;
                color: white;
                padding: 15px 30px;
                border-radius: 8px;
                box-shadow: 0 3px 8px rgba(0,0,0,0.1);
                margin-bottom: 30px;
                text-align: center;
                position: relative;
                width: 100%;
                left: -18px;
                top: -20px;
            }

            .barra_inicial a 
            {
                color: white;
                text-decoration: none;
                font-weight: bold;
                font-size: 18px;
            }
     
            h3.title {
                margin-bottom: 20px;
                font-weight: 600;
                font-size: 24px;
                color: #1e90ff;
            }

        ul.funcionario-list 
        {
            list-style: none;
            padding: 0;
            width: 100%;
            margin: 0 auto;
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

        ul.funcionario-list li 
        {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 20px;
            border-bottom: 1px solid #ddd;
            font-size: 18px;
        }

        ul.funcionario-list li:last-child 
        {
            border-bottom: none;
        }

        ul.funcionario-list li:hover 
        {
            background-color: #89CFF0;
            color: black;
        }

        ul.funcionario-list li span 
        {
            flex-grow: 1;
        }

        ul.funcionario-list li a 
        {
            margin-left: 15px;
            color: #1e90ff;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        ul.funcionario-list li a:hover 
        {
            color: black;
            text-decoration: underline;
        }
      
        ul.funcionario-list li a 
        {
            margin-left: 0;
            margin-top: 8px;
        }

        .barras
        {
            gap: 30px;
            display: flex;
            justify-content: center;
        }   
        
        hr
        {
            position: relative;
            width: 102%;
            left: -28px;
            border: 1px solid #d3d3d3;
        }

        h3.titulo
        {
            margin-bottom: 20px;
            font-weight: 600;
            font-size: 24px;
            color: #1e90ff;
            position: relative;
            left: 10px;
        }
    </style>
</head>
<body>
    <div class="barra_inicial">
        <div class="barras">
        <a href="/funcionario/cadastrar">Cadastrar funcionario</a> <a href="/">Página Inicial</a>
        </div>

        <hr /> 
        <h1>Controle de Medicamentos</h1>
    </div>

    <h3 class="titulo">Funcionários - Visualização</h3>

    <ul class="funcionario-list">
        @foreach (DetalheFuncionarioViewModel f in Model.registros)
        {
            <li>
                <span>@f.ToString()</span>
                <div class="opa">
                <a  href="/funcionario/editar/@f.Id">Editar</a> |
                <a  href="/funcionario/excluir/@f.Id">Excluir</a>
                </div>
            </li>
        }
    </ul>
</body>
</html>
