@using ControleDeMedicamentos.ConsoleApp.ModuloPaciente

@model List<Paciente>;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title> Controle de Medicamentos </title>
</head>
<body>
    <hr />
    <h3> <a href="/">  PaginaInicial </a> </h3>
    <h1> Controle de Medicamentos </h1>
    <hr />

    <h3> Pacientes - Visualização</h3>


    <ul>
        @foreach (Paciente f in Model)
        {
            <li>
                @f.ToString() |
                <a href="/paciente/editar/@f.Id"> Editar </a> |
                <a href="/paciente/excluir/@f.Id"> Excluir </a>
            </li>
        }
    </ul>
</body>
</html>