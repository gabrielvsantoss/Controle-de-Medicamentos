@using ControleDeMedicamentos.ConsoleApp.Models
@using ControleDeMedicamentos.ConsoleApp.ModuloFornecedor
@model EditarPacienteViewModel;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title> Pacientes - Controle de Medicamentos </title>
</head>
<body>
    <h1> Controle de Medicamentos </h1>

    <h3> Pacientes - Edição   </h3>

    <form action="/paciente/editar/@Model.Id" method="post">

        <label> Nome do paciente: </label>
        <br />
        <input type="text" name="nome" value="@Model.Nome" />

        <br />
        <br />

        <label>  Telefone do paciente:  </label>
        <br />
        <input type="text" name="telefone" value="@Model.Telefone" />

        <br />
        <br />

        <label>  Cartao do SUS do paciente:  </label>
        <br />
        <input type="text" name="cpf" value="@Model.CartaoSus" />

        <br />
        <br />

        <p> <button> Salvar </button> <a href="/">  Voltar</a> </p>

    </form>
</body>
</html>